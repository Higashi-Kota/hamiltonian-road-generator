{
  "name": "@hamiltonian/lib",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./*": {
      "import": "./dist/*",
      "types": "./dist/*"
    }
  },
  "files": [
    "dist",
    "src",
    "rslib.config.ts"
  ],
  "scripts": {
    "clean": "rm -rf dist node_modules *.tsbuildinfo coverage",
    "build": "rslib build",
    "dev": "rslib build --watch",
    "typecheck": "tsc -p tsconfig.typecheck.json",
    "lint": "biome check src",
    "lint:fix": "biome check src --fix --unsafe",
    "format": "biome format src --write"
  },
  "dependencies": {
    "@hamiltonian/wasm": "workspace:*"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@internal/shared-config": "workspace:*",
    "@rslib/core": "^0.18.2",
    "@types/node": "^24.10.1",
    "typescript": "^5.9.3"
  }
}
